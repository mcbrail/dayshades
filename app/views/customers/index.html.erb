<div class="admin-top">	
	<div class="wraptop">
	  <div class="top">
	   	<div class="top-panel-logo"><h1>DAYSHADES | <span>Admin</span></h1></div>
	        
	        <div class="top-panel-links">
	        	<ul>
	            	<li><%= link_to 'DASHBOARD', dashboard_index_path %></li>
	            	<li><%= link_to 'CUSTOMERS', customers_path %></li>
	            	<li><%= link_to 'CATEGORIES', categories_path %></li>
	            	<li><%= link_to 'PRODUCTS', products_path %></li>
	            	<li><%= link_to 'ORDERS', "orders_path" %></li>
	            	<li><%= link_to 'ADMINISTRATORS', administrators_new_path %></li>

	            </ul>
	        
	        </div>
		</div>
	</div>
</div>

<div class="admin-wrap">
	<div class="admin-content">
		<div class ="text">
			<h1>New Customer</h1>
				<br>
	            	<div class = "left">
	            		<strong><p class="stat-blue"><%=flash[:notice] %></p></strong>
	            		<br><br>
	            		<%= render 'form' %>
					</div>

					<div class="right">
						<BR><BR>
	            		<table width="850" border="0">
							<tr>
								
								<td class="table-header-style td-width-100px"><b> NAME</b></td>
								<td class="table-header-style td-width-100px"><b> CONTACT NUMBERS</b></td>
								<td class="table-header-style td-width-100px"><b> PHYSIVAL ADDRESS</b></td>
								<td class="table-header-style td-width-100px"><b> EMAIL ADDRESS</b></td>
								<td class="table-header-style td-width-100px"><b> &nbsp;</b></td>
								
								
							</tr>
							<% @customers.each do |customer|  %>
								<tr>
									<td class=" td-width-100px"><%= customer.name %></td>
			                        <td class=" td-width-100px"><%= customer.phone %></td>
			                        <td class=" td-width-100px"><%= customer.email %></td>
			                        <td class=" td-width-100px"><%= customer.address %></td>
			                        <td class=" td-width-100px"><%= link_to 'Show', customer %> | <%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
								</tr>
							<% end %>
							
						</table>
				    </div>
				    
        	</div>
        </div>
    </div>
							
</div>
<div class="clear"><br><br></div>
