              <li><%= link_to 'CONTACT US', public_contact_path %></li>
            </ul>
          </div>
      </div>
            
            <div class="row">
              <div class="content-col">
                    <h1>Your Cart</h1>
                
                    <table width="850" border="0">
                      <tr>
                        <td class="table-header-style td-width-100px"><b> PRODUCT</b></td>
                        <td class="table-header-style td-width-100px"><b> CART</b></td>
                        <td class="table-header-style td-width-100px"><b> </b></td>
                        
                      </tr>

                    <% @line_items.each do |line_item| %>
                      <tr>
                        <td class=" td-width-100px"><%= line_item.product_id %></td>
                        <td class=" td-width-100px"><%= line_item.cart_id %></td>
                        <td class=" td-width-100px"><%= link_to 'Show', line_item %>
                        <%= link_to 'Edit', edit_line_item_path(line_item) %>
                        <%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                    </table>

                    <br />

                    <%= link_to 'New Line item', new_line_item_path,{class:"button-class"} %>
                    <BR><BR><BR>

              </div>
          </div>
        </div>
    </div>
    <div class="clear"></div>
</div>

