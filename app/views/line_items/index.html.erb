                <li><%= link_to 'SIGN IN', "#" %></li>
                <li><%= link_to 'ADMIN', administrators_path %></li> 
                <li><%= image_tag ("facebook.png") %> </li>
                <li><%= image_tag ("twitter.png") %></li>
            </ul>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="content">
        <div class="header-row">
            <div class="logo">
                    <%= link_to (image_tag ("logo.png")), public_index_path %>
            </div>
        </div>

        <div class="row">
          <div class="nav">
            <ul>
              <li><%= link_to 'HOME', public_index_path%></li>
              <li><%= link_to 'ABOUT US', public_about_path %></li>
              <li><%= link_to 'PRODUCTS', public_list_path %></li>
