<div class="admin-top"> 
  <div class="wraptop">
    <div class="top">
      <div class="top-panel-logo"><h1>DAYSHADES | <span>Admin</span></h1></div>
          
          <div class="top-panel-links">
            <ul>
                <li><%= link_to 'DASHBOARD', dashboard_index_path %></li>
                <li><%= link_to 'CUSTOMERS', customers_path %></li>
                <li><%= link_to 'CATEGORIES', categories_path %></li>
                <li><%= link_to 'PRODUCTS', products_path %></li>
                <li><%= link_to 'ORDERS', orders_path %></li>
                <li><%= link_to 'ADMINISTRATORS', admins_path %></li>

              </ul>
          
          </div>
    </div>
  </div>
</div>

<div class="admin-wrap">
  <div class="admin-content">
    <div class ="text">
      <h1>Administrators List</h1>
        <br>
        <br />
          <%= link_to 'New Admin', new_admin_path %>
          <div class="left">
            <BR><BR>
                  <table width="850" border="0">
                      <tr>
                        <td class="table-header-style td-width-100px"><b> NAME</b></td>
                        <td class="table-header-style td-width-100px"><b> CONTACT NUMBERS</b></td>
                        <td class="table-header-style td-width-100px"><b> EMAIL ADDRESS</b></td>
                        <td class="table-header-style td-width-100px"><b> &nbsp;</b></td>
                      </tr>

                    <% @admins.each do |admin| %>
                      <tr>
                        <td class="align-center"><%= admin.name %></td>
                        <td class="align-center"><%= admin.phone %></td>
                        <td class="align-center"><%= admin.email %></td>
                        <td class="align-center"><%= admin.password %></td>
                        <td class="align-center"><%= link_to 'Show', admin %> | <%= link_to 'Edit', edit_admin_path(admin) %> | <%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                    </table>
            </div>
            
          </div>
        </div>
    </div>
              
</div>
<div class="clear"><br><br></div>
<div class="wrap-footer">
  <div class="footer">
    
  </div>
</div>

