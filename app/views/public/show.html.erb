<div class="wraptop">
  <div class="top">
        <div class="top-panel-links">
            <ul class="list-align-right">
                <li><%= link_to 'REGISTER', customers_new_path %></li>
                <li><%= link_to 'SIGN IN', "#" %></li>
                 <li><%= link_to 'ADMIN', administrators_path %></li> 
                <li><%= image_tag ("facebook.png") %> </li>
                <li><%= image_tag ("twitter.png") %></li>
            </ul>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="content">
        <div class="header-row">
            <div class="logo">
                    <%= link_to (image_tag ("logo.png")), public_home_path %>
            </div>
        </div>

        <div class="row">
        	<div class="nav">
        		<ul>
        			<li><%= link_to 'HOME', public_home_path%></li>
        			<li><%= link_to 'ABOUT US', public_about_path %></li>
        			<li><%= link_to 'PRODUCTS', public_list_path %></li>
        			<li><%= link_to 'INSTRUCTIONS', public_instructions_path %></li>
        			<li><%= link_to 'CONTACT US', public_contact_path %></li>
        		</ul>
        	</div>
    	</div>
            
            <div class="row">
	            <div class="content-col">
                    <div class ="left_side">
                            <br>
                          <%= image_tag(@product.image_big) %>           
                    </div>

                    <div class="right_side">
                        <br>
                        <h2>Details</h2>

                        <table width="450">
                            <tr>
                                <td><b>ID</b></td>
                                <td><b>CATEGORY</b></td>
                            </tr>
                            <% @categories.each do |c| %>
                            <tr>
                                <td><%= h(c.id) %></td>
                                <td><%= h(c.name) %></td>
                            </tr>
                            <% end %>
                        <table>

                        <br>
                        <table width="450">
                            <tr>
                                <td><b>CATEGORY ID</b></td>
                                <td><%= @product.category_id %></td>
                            </tr>
                            <tr>
                                <td><b>PRODUCT CODE</b></td>
                                <td><%= @product.code.upcase %></td>
                            </tr>

                            <tr>
                                <td><b>AVAILABLE COLOURS</b></td>
                                <td><%= @product.color.upcase %></td>
                            </tr>

                            <tr>
                                <td><b>PRODUCT FABRIC</b></td>
                                <td><%= @product.fabric.upcase %></td>
                            </tr>

                            <tr>
                                <td><b>PRICE</b></td>
                                <td>R <%= @product.price %></td>
                            </tr>
                        </table>
                        <br>
                        <%= link_to 'Add to Cart' , line_items_path(:product_id => @product), {class:"button-class"} %>
                        <%#= link_to 'ADD TO CART', "#", {class:"button-class"} %>
                        
                    </div>
	            </div>
        	</div>
        </div>
    </div>
    <div class="clear"><br></div>
</div>

<div class="wrap-footer">
	<div class="footer">
		
	</div>
</div>

<div class="bottom-wrapper">
	<div class="bottom">
		<p class="text"><%= link_to 'HOME', public_home_path%> | <%= link_to 'ABOUT US', public_about_path %> | <%= link_to 'PRODUCTS', public_products_path %> | <%= link_to 'INSTRUCTIONS', public_instructions_path %> | <%= link_to 'CONTACT US', public_contact_path %></p>

        <p>Dayshades Bridal Boutique 2013 &copy; All rights reserved. Website by | <%= link_to 'Thabang Chewa ', "http://www.thabangchewa.co.za" %> & <%= link_to 'Lebo Modimola', "http://www.twitter.com/@lebom" %> </p>
	</div>
</div>
