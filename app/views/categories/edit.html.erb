<div class="admin-wrap">
	<div class="admin-content">
		<div class ="text">
			<h1>Edit Category</h1>

			<div class="left">
				<br><br>
				<%= form_for :category do |c| %>
						
					Category Name <br>
					<%= c.text_field :name, {class:"textfield"} %><br><br>

					Product Image (thumbnals url Product name/thumbnail) <br>
					<%= c.text_field :image,{class:"textfield"} %><br><br>

					Category Description <br>
					<%= c.text_field :description,{class:"textfield textarea-height"} %><br><br>

					<%= submit_tag "Save Category", {class:"button-class"} %><br>
				<% end %>
			</div> 
			<div class="right">	
			<br><br>	
						<table width="850" border="0">
								<tr>
									<td class="table-header-style"><b>ID</b></td>
									<td class="table-header-style"><b>IMAGE</b></td>
									<td class="table-header-style"><b>NAME</b></td>
									<td class="table-header-style"><b>DESCRIPTION</td>
									<td class="table-header-style"><b>ACTIONS</td>
								</tr>
								<% @categories.each do |category| %>
									<tr>
										<td><%= category.category_id %></td>
										<td><%= image_tag(category.image, :size => "85x100") %></td>
										<td><%= category.name %></td>
										<td><%= category.description %></td>
										<td></td>
									</tr>
								<% end %>
						</table>
			</div>
		</div>
	</div>
</div>



